{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "./src/",
    "paths": {
      "@styles/*": ["styles/*"],
      "@store/*": ["store/*"],
      "@hooks/*": ["hooks/*"],
      "@services/*": ["services/*"],
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"]
    }
  },
  "include": ["src", "**/*.d.ts"],
  "exclude": ["**/node_modules", "**/.*/"]
}
